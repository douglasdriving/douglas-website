---
interface Props {
	title: string;
}

const { title } = Astro.props;
const currentPath = Astro.url.pathname;
console.log('Current path:', currentPath);
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Douglas Driving's personal website" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/douglas-website/favicon.svg" />
		<title>{title}</title>
	</head>
	<body>
		<div class="container">
			<h1 class="site-title">&#x1F47E; Douglas Driving &#x1F47E;</h1>

			<nav>
				<a class:list={["nav-link", { active: currentPath === "/douglas-website/" || currentPath === "/douglas-website" }]} href="/douglas-website/">üè† Home</a>
				<a class:list={["nav-link", { active: currentPath === "/douglas-website/about/" }]} href="/douglas-website/about/">üëã About</a>
				<a class:list={["nav-link", { active: currentPath === "/douglas-website/projects/" }]} href="/douglas-website/projects/">üõ†Ô∏è Projects</a>
				<a class:list={["nav-link", { active: currentPath === "/douglas-website/thoughts/" }]} href="/douglas-website/thoughts/">üí≠ Thoughts</a>
			</nav>

			<slot />
		</div>
		<style>
			body {
				font-family: system-ui, sans-serif;
				margin: 0;
				padding: 20px;
				line-height: 1.6;
			}
			.container {
				max-width: 600px;
				margin: 0 auto;
				text-align: center;
				padding: 0 15px;
			}
			.site-title {
				margin: 10px 0;
				width: 100%;
				font-size: clamp(1.8rem, 7vw, 2.8rem);
				white-space: nowrap;
			}
			nav {
				margin: 20px auto;
				display: flex;
				justify-content: center;
				gap: 1.5rem;
				width: fit-content;
				padding: 0.5rem 1rem;
				border-radius: 8px;
				background: #f5f5f5;
			}
			.nav-link {
				text-decoration: none;
				color: #666;
				font-size: 1rem;
				transition: color 0.2s ease;
				position: relative;
				padding: 4px 0;
			}
			.nav-link:hover {
				color: #000;
			}
			.nav-link.active {
				color: #000;
				font-weight: bold;
			}
			.nav-link::after {
				content: '';
				position: absolute;
				bottom: 0;
				left: 0;
				width: 100%;
				height: 2px;
				background: currentColor;
				transform: scaleX(0);
				transition: transform 0.2s ease;
			}
			.nav-link:hover::after {
				transform: scaleX(0.5);
			}
			.nav-link.active::after {
				transform: scaleX(1);
			}
			@media (max-width: 480px) {
				body {
					padding: 10px;
				}
				nav {
					gap: 1rem;
					padding: 0.5rem;
				}
				.nav-link {
					font-size: 0.9rem;
				}
				h1 {
					margin: 10px 0;
				}
			}
			img {
				max-width: 100%;
				height: auto;
			}
		</style>
	</body>
</html>
