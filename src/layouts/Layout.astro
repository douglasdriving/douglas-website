---
interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Douglas Driving's personal website" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<title>{title}</title>
	</head>
	<body>
		<div class="container">
			<h1>&#x1F47E; Douglas Driving &#x1F47E;</h1>

			<nav>
				<a href="/">Home</a>
				|
				<a href="/about">About Me</a>
				|
				<a href="/projects">Projects</a>
				|
				<a href="/thoughts">Thoughts</a>
			</nav>

			<slot />
		</div>
		<style is:global>
			body {
				font-family: system-ui, sans-serif;
				margin: 0;
				padding: 20px;
				line-height: 1.6;
			}
			.container {
				max-width: 800px;
				margin: 0 auto;
				text-align: center;
			}
			nav {
				margin: 20px 0;
			}
			nav a {
				text-decoration: none;
				color: #333;
				padding: 5px 10px;
			}
			nav a:hover {
				text-decoration: underline;
			}
			img {
				max-width: 100%;
				height: auto;
			}
		</style>
	</body>
</html>
